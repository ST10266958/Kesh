@model IEnumerable<Gary.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerName</td>
                <td>@customer.CustomerEmail</td>
                <td>
                    <form asp-action="DeleteCustomer" method="post" style="display:inline;">
                        <input type="hidden" name="partitionKey" value="@customer.PartitionKey" />
                        <input type="hidden" name="rowKey" value="@customer.RowKey" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateCustomer" class="btn btn-primary">Add New Customer</a>
